#!/bin/bash
#ddev-generated - Do not modify this file; your modifications will be overwritten.

function checkHyva() {
    HYVA=false
    BUILD_PATH=$1
    HYVA_FOLDER=$BUILD_PATH/web/tailwind
    if [[ -d "$HYVA_FOLDER" && -f "$HYVA_FOLDER/tailwind.config.js" && -f "$HYVA_FOLDER/package.json" ]]; then
        HYVA=true
    fi
}

